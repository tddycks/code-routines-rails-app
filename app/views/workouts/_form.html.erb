<%= form_for([@user, @workout]) do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %><br>

  <%= f.label :description %>
  <%= f.text_area :description %><br>

  <%= f.label :duration %>
  <%= f.text_field :duration %><br>

  <%= f.label :public %>
  <%= f.check_box :public %><br>

  <%= f.collection_check_boxes :focus_ids, Focus.all, :id, :name %><br>
  
  <%= f.fields_for :focuses do |focus| %>
    <%= focus.label :name %>
    <%= focus.text_field :name %><br>
    <%= focus.label :description %>
    <%= focus.text_field :description %><br>
    <%= focus.label :duration %>
    <%= focus.number_field :duration %><br>
  <% end %>
<%= f.submit %>
<% end %>
